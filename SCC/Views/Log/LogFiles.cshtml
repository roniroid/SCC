@using SCC.Controllers;
@using SCC_BL;
@using SCC.ViewModels;

@model LogFileViewModel

@{
    User actualUser = (User)Session[SCC_BL.Settings.AppValues.Session.GLOBAL_ACTUAL_USER];

    string mainControllerName = OverallController.GetControllerName(typeof(LogController));

    ViewBag.Title = "Archivos de bitácora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/panel")
@Styles.Render("~/Content/radio")

@*@Styles.Render("~/Content/datatables")
    @Scripts.Render("~/bundles/datatables")*@

<link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Content/DataTables/datatables.min.js"></script>

<link href="~/Content/Custom/Datatables/custom-datatables.css" rel="stylesheet" />

<div class="tableContainer">
    <table class="display cell-border" id="tbInfo">
        <thead>
            <tr>
                <th>
                    Nombre del archivo
                </th>
                <th>
                    Usuario
                </th>
                <th>
                    Fecha de creación
                </th>
                <th class="text-center">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (LogFileViewModel.LogFileInfo logInfo in Model.LogFileInfoList)
            {
                <tr>
                    <td>
                        <a href="@Url.Action(nameof(LogController.ViewLogFile), mainControllerName, new { fileName = logInfo.FileName })" target="_blank">@logInfo.FileName</a>
                    </td>
                    <td>@logInfo.Username</td>
                    <td data-order="@logInfo.CreationDate.ToString("yyyyMMddHHmmss")">@logInfo.CreationDate.ToString("dd MMM yyyy hh:mm:ss tt")</td>
                    <td class="text-center">
                        <button data-elementname="@logInfo.FileName" class="btn-element-action btn-element-action-secondary btn-logs-read" type="button" title="Ver">
                            <i class='bx bx-book-reader'></i>
                        </button>
                        <button data-elementname="@logInfo.FileName" class="btn-element-action btn-element-action-primary btn-logs-download" type="button" title="Descargar">
                            <i class='bx bxs-download'></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        fetchDatatableBasicData().then(response => {
            let data = response;

            data['order'] = [[2, 'desc']];

            startDataTable('#tbInfo', data);
        });
    });

    $('.btn-logs-download').click((e) => {
        const element = e.currentTarget;
        const elementName = element.dataset.elementname;

        window.open('@Url.Action(nameof(LogController.DownloadLogFile), mainControllerName)?fileName=' + elementName, '_blank');
    });

    $('.btn-logs-read').click((e) => {
        const element = e.currentTarget;
        const elementName = element.dataset.elementname;

        window.open('@Url.Action(nameof(LogController.ViewLogFile), mainControllerName)?fileName=' + elementName, '_blank');
    });
</script>